/* pages/particulars/particulars.wxss */
.main{
    margin-bottom: 100rpx;
}
/* 轮播图 */
.m-swiper{
    margin-bottom: 10rpx;
    height: 650rpx;
}
.m-img{
    width: 100%;
    height: 100%;
}

/* 商品详情 */
.products{
    border-top: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
    padding-left: 20rpx;
}

.goodsName{
    display: block;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 34rpx;
}

.goodsMoney{
    display: block;
    font-size: 34rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 1px solid #ccc;
}

.g-now{
    color: red;
    margin-right: 10rpx;
}

.g-old{
    color: #ccc;
    text-decoration:line-through;
    font-size: 30rpx;
    margin-right: 15rpx;
}

.g-order{
    color: #888888;
    font-size: 30rpx;
    margin-right: 15rpx;
}

.g-express{
    color: #888888;
    font-size: 30rpx;

}

.condition{
    height: 70rpx;
    line-height: 60rpx;
    border-bottom: 1rpx solid #ccc;
}

.c-icon{
    position: relative;
    top: 10rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
}

.c-txt{
   font-size: 28rpx;
}

.select{
    color: #ccc;
    font-size: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.s-icon{
    position: relative;
    float: right;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
}

/* 图文评价 */
.check{
    background-color: white;
    width: 100%;
    margin-top: 20rpx;
    border-bottom: 1rpx solid #ccc;
    border-top: 1rpx solid #ccc;
}

.t-red{
    border-bottom: 1px solid red;
}

.t-txt{
   float: left;
   width: 50%;
   text-align: center;
   font-size: 30rpx;
   height: 80rpx;
   line-height: 80rpx;
}
.c-img{
    width: 100%;
}
/* 底部 */
.footer{
    height: 100rpx;
}

.van-goods-action-button{
   font-size: 24rpx;
}
button:not([size='mini']){
 width: 100%;
}
.van-button{
    padding: 0px 0px !important;
}
.van-goods-action{
    z-index: 2;
}

/* 上拉菜单 */
.van-popup {
    overflow-y: visible !important;
    border-radius: 0px !important;
    position: relative;
    height: 800rpx;
}

.s-top {
   height: 200rpx;
   border-bottom: 1rpx solid #ccc; 
}

.s-img {
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    top: -50rpx;
    border: 10rpx solid white;
    left: 30rpx;
    box-shadow:0 0 20rpx black;
}

.s-txt{
  margin-left: 240rpx;
  display: block;
}

.s-t{
    display: block;
    font-size: 30rpx;
    margin-bottom: 10rpx;
}

.s-money{
    color: red;
    height: 50rpx;
    line-height: 50rpx;
    font-weight: 700;
    font-size: 34rpx;
}

.s-close{
   position: absolute;
   right: 10rpx;
   top: 10rpx;
}

.s-mian{
    border-bottom: 1rpx solid #ccc;
    height: 150rpx;
    padding:10rpx;
}
.s-m-t{
    height: 60rpx;
    line-height: 60rpx;
    font-size: 32rpx;
}
.s-m-b{
    height: 80rpx;
}
.m-b-t{
    display: block;
    float: left;
    font-size: 28rpx;
    border:1rpx solid #ccc;
    width: 50rpx;
    height: 50rpx;
    line-height: 40rpx;
    text-align: center;
    margin-top:10rpx;
    margin-right: 10rpx;
    margin-left: 10rpx;
}

.s-footer{
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    border-top: 1rpx solid #ccc;
}

.s-count{
  float: left;
  width: 50%;
  text-align: center;
  height: 100%;
}

.s-button{
  float: left;
  width: 50%;
  height: 100%;
  text-align: center;
  background-color: red;
  color: white;
  font-size: 32rpx;
}
