/* pages/me/me.wxss */
.header{
  position: relative;
  height: 380rpx;
  border-bottom: 1rpx solid #ccc;
  text-align: center;
}

.back-img{
  width: 100%;
  height: 250rpx;
}

.head-img{
   width: 120rpx;
   height: 120rpx;
   position: absolute;
   top: 50%;
   left: 50%;
   transform: translateX(-50%);
}

.h-text{
   display: block;
   font-size: 30rpx;
   margin-top: 60rpx;
}

.center{
    border-top: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
    display: block;
    padding: 10rpx;
    color: #ccc;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    font-size: 26rpx;
    height: 50rpx;
    line-height: 50rpx;
}

.footer{
    border-top: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
    padding-left: 20rpx;
    padding-right: 20rpx;
    padding-bottom: 30rpx;
}

.f-txt{
   display: block;
   border-bottom: 1rpx solid #ccc;
   font-size: 26rpx;
   height: 80rpx;
   line-height: 80rpx;
}

.f-t-t{
    color: #ccc;
}

.map{
  position: relative;
}

.m-map{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%);
}